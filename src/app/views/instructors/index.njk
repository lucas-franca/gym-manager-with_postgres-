{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">

  <a id="novo" href="/instructors/create">Novo</a>

    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
      {% for instructor in instructors %}
        <tr>
          <td>
            <span class="img" style="background-image: url({{instructor.avatar_url}})"></span>
          
            {{instructor.name}}
          </td>
          <td>
          <span class="service">
            {{instructor.services}}
            <span>
          </td>
          <td>
            <a href="/instructors/{{instructor.id}}">ver</a>
          </td>

        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}